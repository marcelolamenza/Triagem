<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diseases.DiseaseListFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Listagem de enfermidades"
                android:textColor="@color/text_color"
                android:textSize="@dimen/letter_size_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clique para mais informações"
                android:textSize="@dimen/edit_text_letter_size_small"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/red"
                android:layout_marginTop="16dp"
                android:text="Sintomas vermelhos:"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/red_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/red"
                android:text="- Cansaço\n- Dor\n- Sofrimento"
                app:layout_constraintTop_toBottomOf="@+id/red" />

            <TextView
                android:id="@+id/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/orange"
                android:layout_marginTop="16dp"
                android:text="Sintomas laranjas:"
                app:layout_constraintTop_toBottomOf="@id/red_description" />

            <TextView
                android:id="@+id/orange_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/orange"
                android:text="- Cansaço\n- Dor\n- Sofrimento"
                app:layout_constraintTop_toBottomOf="@+id/orange" />

            <TextView
                android:id="@+id/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/yellow"
                android:layout_marginTop="16dp"
                android:text="Sintomas amarelos:"
                app:layout_constraintTop_toBottomOf="@id/orange_description" />

            <TextView
                android:id="@+id/yellow_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/yellow"
                android:text="- Cansaço\n- Dor\n- Sofrimento"
                app:layout_constraintTop_toBottomOf="@+id/yellow" />

            <TextView
                android:id="@+id/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/green"
                android:layout_marginTop="16dp"
                android:text="Sintomas azuis:"
                app:layout_constraintTop_toBottomOf="@id/yellow_description" />

            <TextView
                android:id="@+id/green_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/green"
                android:text="- Cansaço\n- Dor\n- Sofrimento\n- Cansaço\n- Dor\n- Sofrimento- Cansaço\n- Dor\n- Sofrimento- Cansaço\n- Dor\n- Sofrimento- Cansaço\n- Dor\n- Sofrimento- Cansaço\n- Dor\n- Sofrimento- Cansaço\n- Dor\n- Sofrimento"
                app:layout_constraintTop_toBottomOf="@+id/green" />

            <TextView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/blue"
                android:layout_marginTop="16dp"
                android:text="Sintomas azuis:"
                app:layout_constraintTop_toBottomOf="@id/green_description" />

            <TextView
                android:id="@+id/blue_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="@dimen/letter_size_small"
                android:textColor="@color/blue"
                android:text="- Cansaço\n- Dor\n- Sofrimento"
                app:layout_constraintTop_toBottomOf="@+id/blue" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>